

 pipeline {
    agent any

    stages {
        stage('Checkout Code') {
            steps {
                 echo " getting project from git "
                git url: 'https://github.com/lawi55/kaddem', branch: 'imen'
            }
        }

        stage('Build Project') {
            steps {

                sh 'mvn clean'
                sh 'mvn compile'
            }
        }

          stage('MVN SonarQube') {
            environment {
                SONAR_TOKEN = credentials('8625e95b-c8f5-42a0-af62-d16aa6e5b135')
            }
            steps {
                sh '''
                    mvn sonar:sonar \
              -Dsonar.projectKey=Kaddem \
              -Dsonar.projectName='Kaddem' \
              -Dsonar.host.url=http://192.168.50.4:9000 \
              -Dsonar.login= 'admin'\
              -Dsonar.password=$SONAR_TOKEN
                '''

            }
        }

         stage('Deploy') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'nexus-credentials', passwordVariable: 'NEXUS_PASSWORD', usernameVariable: 'NEXUS_USERNAME')]) {
                    sh """
                        echo "<settings>
                            <servers>
                                <server>
                                    <id>deploymentRepo</id>
                                    <username>${NEXUS_USERNAME}</username>
                                    <password>${NEXUS_PASSWORD}</password>
                                </server>
                            </servers>
                        </settings>" > ~/.m2/settings.xml

                        mvn deploy -DskipTests \
                        -DaltDeploymentRepository=deploymentRepo::default::http://192.168.50.4:8081/repository/maven-releases/
                    """
                }
            }

         }
    }
}
